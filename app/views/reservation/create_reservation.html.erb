	<!-- Title Page -->
	<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(<%= image_url 'bg-title-page-02.jpg' %>);">
		<h2 class="tit6 t-center">
			Reservation
		</h2>
	</section>


	<!-- Reservation -->
	<section class="section-reservation bg1-pattern p-t-100 p-b-113">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 p-b-30">
					<div class="t-center">
						<span class="tit2 t-center">
							Reservation
						</span>

						<h3 class="tit3 t-center m-b-35 m-t-2">
							Book table
						</h3>
					</div>	

					<%= form_for(@reservation) do |form| %>
						<div>
							<%= form.label :name %>
							<%= form.text_field :name, value: current_user.full_name, class:"form-control"%>
						</div><br>

						<div>
							<%= form.label :phone_no %>
							<%= form.text_field :phone_no, value: current_user.phone_no, class:"form-control"%>
						</div><br>

						<div>
							<%= form.label :email %>
							<%= form.text_field :email, value: current_user.email, class:"form-control"%>
						</div><br>

						<div>
							<%= form.label :person %>
							<%= form.select :person, [["1 Person"], ["2 Person"], ["3 Person"], ["4 Person"], ["5 Person"], ["6 Person"], ["7 Person"], ["8 Person"], ["9 Person"], ["10 Person"]], class:"form-control"%>
						</div><br>

						<div>
							<%= form.label :date %> :
							<%= form.date_select :date, class:"form-control"%>
						</div><br>

						<div>
							<%= form.label :time %> :
							<%= form.time_select :time, class:"form-control"%>
						</div><br>

						<div>
							<%= form.label :special_request %>
							<%= form.text_area :special_request, class:"form-control"%>
						</div><br>

						<%= form.submit "Book Table", class:"btn btn-block btn3 mtxt11" %>

					<% end %>

				</div>
			</div>

			<div class="info-reservation flex-w p-t-80">
