<% content_for :title do %>
  Log In
<% end %>

<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15"
    style="background-image: url(<%= image_url 'bg-intro-01.jpg' %>);">
    <h2 class="tit6 t-center">
      Log In
    </h2>
	</section>

<section class="section-mainmenu p-t-110 p-b-70 bg1-pattern">
  <div class="container">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder:"Enter your Register Email", autocomplete: "email", class:"form-control" %>
      </div><br>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder:"Enter your Password", autocomplete: "current-passwor", class:"form-control"  %>
      </div><br>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn3 btn-block mtxt11"  %>
      </div>
    <% end %><br>

    <%= render "devise/shared/links" %>
    
  </div>
</section>