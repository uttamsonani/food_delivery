<% content_for :title do %>
	Search
<% end %>
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(<%= image_url 'bg-title-page-01.jpg' %>);">
	<h2 class="tit6 t-center">
		search Result
	</h2>
</section><br>

<div class="container text-center">

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.text_field :search, placeholder: "Search your favourit food", class:"text-center" %>
  <%= form.submit "Search", class:"btn btn-success" %>
<% end %> <br>

<%== pagy_bootstrap_nav(@pagy) %><br>

</div>

<section class="section-mainmenu p-t-110 p-b-70 bg1-pattern">
	<div class="container">
		<div class="row">
			<div class="col-12 p-r-35 p-r-15-lg m-l-r-auto">
				<div class="wrap-item-mainmenu p-b-22">

					<% if @foods.blank? %>
						<h4 class="text-center font-weight-bold">NO RECORD FOUND</h4>
					<% else %>
						<% @foods.each do |food| %>
							<!-- Item mainmenu -->
							<div class="item-mainmenu m-b-36">
								<div class="flex-w flex-b m-b-3">
									<a href="#" class="name-item-mainmenu txt21">
										<%= food.name %>
									</a>

									<div class="line-item-mainmenu bg3-pattern"></div>

									<div class="price-item-mainmenu txt22">
										$ <%= food.price %>
									</div>
								</div>

								<span class="info-item-mainmenu txt23">
									<%= food.description %>
								</span>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>